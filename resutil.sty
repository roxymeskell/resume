% Vertically centers resized text
\newcommand*\raiseup[2][\tiny]{%
        \begingroup%
        \setbox0\hbox{#1\strut #2}%
        \leavevmode%
		\raise\dimexpr (\ht\strutbox - \ht0)/2\box0%
        \endgroup%
}

