\def\fwork@expand{def}

% % % %

\def\fwork#1{%
	\@ifnextchar[%
	{\fwork@i{#1}}%
	{\fwork@i{#1}[]}%
}
\def\fwork@i#1[#2]{%
	\@ifnextchar[%
	{\fwork@ii{#1}[#2]}%
	{\fwork@ii{#1}[#2][]}%
}
\def\fwork@ii#1[#2][#3]{%
	\@ifnextchar[%
	{\fwork@iii{#1}[#2][#3]}%
	{\fwork@iii{#1}[#2][#3][]}%
}
\def\fwork@iii#1[#2][#3][#4]{%
	\@ifnextchar[%
	{\fwork@iiii{#1}[#2][#3][#4]}%
	{\fwork@iiii{#1}[#2][#3][#4][]}%
}
\def\fwork@iiii#1[#2][#3][#4][#5]{%
	\startchunk%
	\textbf{#1}\ifnotempty{#2}{ - #2}\ifnotempty{#3}{\hfill#3}\par%
	\ifexpanded%
		\nopagebreak
		\ifnotempty{#4}{#4\par\nopagebreak}
		\def\temp{#5}\ifx\temp\empty%
		\else%
			\newarray\Desc
			\readarray{Desc}{#5}
			\begin{worklist}%
				\multido{\iDesc=1+1}{8}{%
					\arrValToItem{Desc}{\iDesc}
				}
			\end{worklist}%
			\delarray\Desc
		\fi
	\fi%
	\endchunk
}


